{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json", "./backend/tsconfig.json", "./frontend/tsconfig.json", "./frontend-admin/tsconfig.json"]
  },
  "plugins": ["@typescript-eslint", "import", "react", "react-hooks", "jsx-a11y"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "settings": { "react": { "version": "detect" } },
  "ignorePatterns": ["observability/data/**"],
  "rules": {
    "import/order": "warn",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["../**/.."]
      }
    ]
  },
  "overrides": [
    { "files": ["*.ts", "*.tsx"] },
    { "files": ["backend/**"], "env": { "node": true, "browser": false } },
    {
      "files": ["frontend/**", "frontend-admin/**"],
      "env": { "browser": true, "node": false },
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "Literal[value=/#[0-9a-fA-F]{3,6}/]",
            "message": "Cores hardcoded proibidas. Use tokens do theme.ts"
          },
          {
            "selector": "CallExpression[callee.name='rgba']",
            "message": "rgba() proibido. Use tokens do theme.ts com opacity"
          }
        ]
      }
    },
    {
      "files": ["scripts/**/*.ts", "scripts/**/*.mjs", "**/*.test.ts", "**/*.spec.ts", "**/seed.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
