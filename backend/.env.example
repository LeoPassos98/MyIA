# Server Configuration
PORT=3001
NODE_ENV=development

# === Database (PostgreSQL com pgvector) ===
DATABASE_URL="postgresql://user:password@localhost:5432/myia?schema=public"

# JWT Authentication (CRÍTICO - Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# Mínimo 32 caracteres (64 em hex). NUNCA use o exemplo abaixo em produção!
JWT_SECRET=sua-chave-secreta-muito-segura-aqui-minimo-32-caracteres
JWT_EXPIRES_IN=7d

# Encryption Secret (CRÍTICO - Para criptografar API keys no banco)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Mínimo 32 caracteres (64 em hex). NUNCA use o exemplo abaixo em produção!
ENCRYPTION_SECRET=sua-chave-de-criptografia-muito-segura-minimo-32-caracteres

# OpenAI API
OPENAI_API_KEY=sk-proj-sua-chave-aqui
OPENAI_MODEL=gpt-3.5-turbo

# Chat Context Configuration
MAX_CONTEXT_MESSAGES=15
CONTEXT_CLEANUP_INTERVAL=3600000

# CORS
# Lista de origens separadas por vírgula (útil em dev):
# Ex: http://127.0.0.1:3000,https://sturdy-goldfish-xgx4wxvv7w2ppjv-3000.app.github.dev
CORS_ORIGIN=http://127.0.0.1:3000,https://sturdy-goldfish-xgx4wxvv7w2ppjv-3000.app.github.dev

# Groq (opcional - gratuito!)
GROQ_API_KEY=sua-chave-groq-aqui
GROQ_MODEL=llama-3.1-8b-instant

# Together.ai (opcional)
TOGETHER_API_KEY=sua-chave-together-aqui
TOGETHER_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct-Turbo

# Perplexity (opcional)
PERPLEXITY_API_KEY=sua-chave-perplexity-aqui
PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-online

# Mistral (opcional)
MISTRAL_API_KEY=sua-chave-mistral-aqui
MISTRAL_MODEL=mistral-small-latest

# Claude/Anthropic (opcional)
ANTHROPIC_API_KEY=sk-ant-sua-chave-aqui
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Provider padrão (se não especificado na requisição)
API_PROVIDER=groq

# === Azure OpenAI (RAG - Embeddings) V9.2 ===
# Endpoint: https://seu-recurso.openai.azure.com (SEM /deployments no final)
AZURE_EMBEDDING_ENDPOINT="https://seu-recurso.openai.azure.com"
# API Key do Azure (não é a mesma chave da OpenAI normal)
AZURE_API_KEY="sua_chave_azure_aqui"
# Nome do deployment criado no Azure (ex: text-embedding-3-small)
AZURE_EMBEDDING_DEPLOYMENT_NAME="text-embedding-3-small"